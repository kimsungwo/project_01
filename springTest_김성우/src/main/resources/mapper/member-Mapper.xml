<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   <!-- 테이블에 대한 모든 SQL문을 mapper태그 안에 작성 -->
<mapper namespace="member-Mapper">
	<!--  먼저 resultMap을 만들어준다.-->
	<!-- resultMap : 쿼리 실행결과 나온 데이터를 자바로 가져올 수 있도록 자바클래스와 결과를 연결(매핑)시켜주는 작업 -->
	<!--  resultmap작성 -->
	<resultMap type="com.spring.vo.SampleVO" id="Sample">
		<id 	column="MEMBER_ID"   property="id"/>
		<result column="MEMBER_PW" 	 property="password"/>
		<result column="MEMBER_NAME" property="name"/>
		<result column="MEMBER_AGE"  property="age"/>
		<result column="REG_DATE" 	 property="date"/>
	</resultMap>
	<select id="loginForm" resultMap="Sample">
		SELECT MEMBER_ID
			, MEMBER_PW
			, MEMBER_NAME
			, MEMBER_AGE
			, REG_DATE
			FROM TEST_MEMBER
			WHERE MEMBER_PW = #{password}
			AND MEMBER_ID = #{id}
	</select>
	
	<select id="memberList" resultMap="Sample">
		SELECT MEMBER_ID
			, MEMBER_PW
			, MEMBER_NAME
			, MEMBER_AGE
			, TO_CHAR(REG_DATE,'YYYY-MM-DD') AS REG_DATE
			FROM TEST_MEMBER
			ORDER BY REG_DATE DESC
			<!-- WHERE  MEMBER_ID = #{id} -->
	</select>
</mapper>
	
