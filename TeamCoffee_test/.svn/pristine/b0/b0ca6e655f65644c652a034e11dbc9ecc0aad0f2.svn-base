<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
.table th{
	text-align: center;
}
.form-control {
	border: none;
}
#radioDiv {
	margin-left: 1rem;
}
#radioDiv .form-check-label {
	font-size: 14px;
}
</style>
<script src="/resources/js/owner/reg_menu.js?ver=1" type="text/javascript"></script>
</head>
<body>
<div class="container">
	<h1>메뉴등록</h1>
	<p>메뉴를 등록 해 주세요.</p>
	<table class="table table-bordered">
		<colgroup>
			<col width="30%">
			<col width="*">
		</colgroup>
		<tbody>
			<tr>
				<th scope="col">매장명</th>
				<td>
					<select class="form-control form-control-sm" id="selectCafeList">
						<option>클릭하면 선택이 가능합니다</option>
						<c:forEach items="${selectCafeList }" var="cafeListInfo">
							<option value="${cafeListInfo.cafeCode }">${cafeListInfo.cafeName }</option>
						</c:forEach>
					</select>
				</td>
			</tr>
		</tbody>
	</table>
	<hr>
	<div class="row justify-content-center">
		<div class="col-10">
			<table class="table table-bordered">
				<colgroup>
					<col width="20%">
					<col width="*">
					<col width="10%">
				</colgroup>
				<tbody>
					<tr>
						<th scope="row">카테고리</th>
						<td>
							<select class="form-control">
								<option>클릭하면 선택이 가능합니다</option>
							</select>
						</td>
						<td>
							<input type="button" class="btn btn-success" value="+" data-toggle="modal" data-target="#insertCategory">
						</td>
					</tr>
					<!-- <tr>
						<th scope="row"></th>
						<td><input class="form-control form-control-sm" type="text"></td>
						<td>
							<input type="button" class="btn btn-primary" value="추가">
						</td>
					</tr> -->
				</tbody>
			</table>
		</div>
	</div>
	<hr>
	<div class="row justify-content-center">
		<div class="col-10">
			<table class="table table-bordered">
				<tbody>
					<tr>
						<th scope="row">메뉴명</th>
						<td>
							<input type="text" class="form-control">
						</td>
					</tr>
					<tr>
						<th scope="row">가격</th>
						<td>
							<input type="text" class="form-control">
						</td>
					</tr>
					<tr>
						<th scope="row">메뉴 이미지</th>
						<td>
						</td>
					</tr>
					<tr>
						<th scope="row">설명</th>
						<td>
							<input type="text" class="form-control">
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="modal fade" id="insertCategory" tabindex="-1" aria-labelledby="#insertCategoryLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="#insertCategoryLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

</body>
</html>