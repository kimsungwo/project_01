package com.teamcoffee.buy.service;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.teamcoffee.buy.vo.BuyDetailVO;
import com.teamcoffee.menu.vo.MenuOptionViewVO;
import com.teamcoffee.menu.vo.MenuViewVO;

@Service("buyService")
public class BuyServiceImpl implements BuyService{
	@Autowired
	private SqlSessionTemplate sqlSession;

	@Override
	public MenuViewVO selectMenuAll(BuyDetailVO buyDetailVO) {
		return sqlSession.selectOne("selectMenuAll", buyDetailVO);
	}

	@Override
	public List<MenuOptionViewVO> selectRequiredOptions(BuyDetailVO buyDetailVO) {
		return sqlSession.selectList("selectOptionAllReq", buyDetailVO);
	}

	@Override
	public List<MenuOptionViewVO> selectSelectionOptions(BuyDetailVO buyDetailVO) {
		return sqlSession.selectList("selectOptionAllSel", buyDetailVO);
	}
	
}
