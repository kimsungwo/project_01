<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>	
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
<style type="text/css">

.bi {
	margin-right: 10px;
}

.card-text div {
	font-size: 17px;
}
.nav-link {
	color: black;
}
.form-inline i {
	padding: 0 5px;
}
.tableClick {
	cursor: pointer;
}
#noticeDiv{
	text-align: center;
	margin-top: 20px;
}
</style>
<script src="/resources/js/cafe/cafe_info_and_menu.js?ver=3" type="text/javascript"></script>
</head>
<body>
<div class="container-sm">
	<div class="row">
		<div class="col-4">
			<div id="contentDiv">
				<div class="card" style="width: 18rem;">
					<img src="/resources/img/logo/${cafeInfo.cafeLogo }" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">${cafeInfo.cafeName }</h5>
						<div class="card-text">
							<div>
								<i class="bi bi-geo-alt"></i>${cafeInfo.cafeAddr } ${cafeInfo.cafeAddrDetail }
							</div>
							<div>
								<i class="bi bi-clock"></i>${cafeInfo.cafeHours }
							</div>
							<div>
								<i class="bi bi-telephone"></i>${cafeInfo.cafeTel }
							</div>
						</div>
					</div>
					<!-- <ul class="list-group list-group-flush">
						<li class="list-group-item">리뷰
							<ul class="list-group list-group-flush">
								<li class="list-group-item">맛있어요</li>
								<li class="list-group-item">분위기 좋아요</li>
							</ul>
						</li>
					</ul> -->
				</div>
			</div>
		</div>
		<div class="col-8">
			<div id="menuDiv">
				<!-- 메뉴바 -->
				<nav class="navbar navbar-light">
					<a class="navbar-brand">Menu</a>
					<div class="form-inline">
						<i class="bi bi-search"></i>
						<i class="bi bi-bag"></i>
					</div>
				</nav>
				<!-- 탭 -->
				<ul class="nav nav-tabs" id="myTab" role="tablist">
					<li class="nav-item" role="presentation">
						<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">전체</a>
					</li>
					<c:forEach items="${cafeCategoryList }" var="cafeCategory">
						<li class="nav-item" role="presentation">
							<a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">${cafeCategory.categoryName }</a>
						</li>
					</c:forEach>
				</ul>
				<div class="tab-content" id="myTabContent">
					<div class="tab-pane fade show active" id="home" role="tabpanel"
						aria-labelledby="home-tab">
						<!-- 탭내용 -->
						<c:choose>
							<c:when test="${cafeMenuList.size() eq 0 }">
								<div id="noticeDiv">
									<h4>등록된 메뉴가 없습니다.</h4>
								</div>
							</c:when>
							<c:otherwise>
								
							</c:otherwise>
						</c:choose>
						
						<table class="table">
						<colgroup>
							<col width="30%">
							<col width="*">
							<col width="20%">
						</colgroup>
							<tbody>
								<c:forEach items="${cafeMenuList }" var="cafeMenu">
									<tr class="tableClick" data-toggle="modal" data-target="#menuInfoModal" onclick="menuInfoModal('${cafeMenu.menuCode}')">
										<th scope="row"><img src="/resources/img/${cafeMenu.menuImgName }" width="70px"></th>
										<td>
											<h5>${cafeMenu.menuName }</h5>
											<fmt:formatNumber value="${cafeMenu.menuPrice }" pattern="#,###"/> 원
										</td>
										<td>${cafeMenu.status }</td>
									</tr>
								</c:forEach>
							</tbody>
						</table>
					</div>
					<div class="tab-pane fade" id="profile" role="tabpanel"
						aria-labelledby="profile-tab">...</div>
					<div class="tab-pane fade" id="contact" role="tabpanel"
						aria-labelledby="contact-tab">...</div>
				</div>
			</div>
		</div>
	</div>
	<!-- 메뉴모달 -->
	<div class="modal fade" id="menuInfoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<!-- 메뉴정보 -->
					<div class="row">
						<div class="col-3">
							<img alt="" src="" width="70px" id="menuImgName">
						</div>
						<div class="col-9">
							<h5 id="menuName"></h5>
							<span id="menuPrice"></span> 원
							<div class="form-inline">
								<i class="bi bi-dash-square-fill"></i>
								<input type="text" class="form-control" value="1">
								<i class="bi bi-plus-square-fill"></i>
							</div>
						</div>
					</div>
					<hr>
					<!-- 메뉴옵션 -->
					<c:forEach items="${menuOptionList }" var="menuOption">
						<c:choose>
							<c:when test="${menuOption.menuOptionGroupType eq 1 }">
								<h5>필수옵션</h5>
								${menuOption.menuOptionGroupName }
								<input type="radio" value="${menuOption.menuOptionCode }" name="${menuOption.menuOptionGroupCode }">${menuOption.menuOptionName }
							</c:when>
							<c:when test="${menuOption.menuOptionGroupType eq 0 }">
								<h5>선택옵션</h5>
								<input type="checkbox" value="${menuOption.menuOptionCode }">${menuOption.menuOptionGroupName }
							</c:when>
						</c:choose>
						
					</c:forEach>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">장바구니 담기</button>
					<button type="button" class="btn btn-primary">바로 주문하기</button>
				</div>
			</div>
		</div>
	</div>
</div>	
</body>
</html>